{
  "info": {
    "name": "COMP3123 Assignment 2 - Backend API",
    "description": "Employee Management System API with JWT Authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "User Routes",
      "item": [
        {
          "name": "User Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"johndoe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "signup"]
            }
          }
        },
        {
          "name": "User Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "    console.log(\"Token saved:\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Employee Routes",
      "item": [
        {
          "name": "Get All Employees",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/employees",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "employees"]
            }
          }
        },
        {
          "name": "Create Employee (without image)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Jane\",\n  \"last_name\": \"Smith\",\n  \"email\": \"jane.smith@company.com\",\n  \"position\": \"Software Engineer\",\n  \"salary\": 75000,\n  \"date_of_joining\": \"2024-01-15\",\n  \"department\": \"IT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/employees",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "employees"]
            }
          }
        },
        {
          "name": "Create Employee (with image)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "first_name",
                  "value": "John",
                  "type": "text"
                },
                {
                  "key": "last_name",
                  "value": "Doe",
                  "type": "text"
                },
                {
                  "key": "email",
                  "value": "john.doe@company.com",
                  "type": "text"
                },
                {
                  "key": "position",
                  "value": "Manager",
                  "type": "text"
                },
                {
                  "key": "salary",
                  "value": "85000",
                  "type": "text"
                },
                {
                  "key": "date_of_joining",
                  "value": "2024-02-01",
                  "type": "text"
                },
                {
                  "key": "department",
                  "value": "IT",
                  "type": "text"
                },
                {
                  "key": "profile_picture",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/employees",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "employees"]
            }
          }
        },
        {
          "name": "Get Employee by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/employees/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "employees", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_EMPLOYEE_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Update Employee",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "position",
                  "value": "Senior Manager",
                  "type": "text"
                },
                {
                  "key": "salary",
                  "value": "95000",
                  "type": "text"
                },
                {
                  "key": "profile_picture",
                  "type": "file",
                  "src": [],
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/employees/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "employees", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_EMPLOYEE_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Employee",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/employees/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "employees", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_EMPLOYEE_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Search Employees by Department",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/employees/search?department=IT",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "employees", "search"],
              "query": [
                {
                  "key": "department",
                  "value": "IT"
                }
              ]
            }
          }
        },
        {
          "name": "Search Employees by Position",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/employees/search?position=Manager",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "employees", "search"],
              "query": [
                {
                  "key": "position",
                  "value": "Manager"
                }
              ]
            }
          }
        },
        {
          "name": "Search Employees by Department & Position",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/employees/search?department=IT&position=Developer",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "employees", "search"],
              "query": [
                {
                  "key": "department",
                  "value": "IT"
                },
                {
                  "key": "position",
                  "value": "Developer"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    }
  ]
}
